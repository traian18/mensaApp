<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".fragments.QuestionFragment">


    <Button
        android:id="@+id/SelectAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="A"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/simple_button"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/SelectBButton"
        app:layout_constraintTop_toTopOf="@+id/SelectBButton" />

    <Button
        android:id="@+id/SelectBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="B"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/simple_button"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionImageView" />

    <Button
        android:id="@+id/SelectCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="C"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/simple_button"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@+id/SelectBButton"
        app:layout_constraintTop_toTopOf="@+id/SelectBButton" />

    <Button
        android:id="@+id/SelectDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="D"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/simple_button"
        android:padding="16dp"
        app:layout_constraintEnd_toStartOf="@+id/SelectBButton"
        app:layout_constraintTop_toBottomOf="@+id/SelectAButton" />

    <Button
        android:id="@+id/SelectEButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="E"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/simple_button"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@+id/SelectBButton"
        app:layout_constraintTop_toBottomOf="@+id/SelectCButton" />

    <ImageView
        android:id="@+id/questionImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        android:padding="24dp"
        android:src="@drawable/item1"
        app:layout_constraintTop_toBottomOf="@+id/questionNumberTextView"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/questionNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/initial_question_number"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>